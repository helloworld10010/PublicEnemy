<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_margin="@dimen/dp_10"
                                    app:cardCornerRadius="0dp"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    app:cardElevation="2dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout android:layout_height="match_parent"
                                                 android:layout_width="match_parent">

        <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content" app:srcCompat="@mipmap/sun"
                android:id="@+id/wantedImage" android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
        />
        <TextView
                android:text="这个人骗了我500w"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/titleText" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/wantedImage"/>
        <TextView
                android:text="也无风雨也无晴"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/author"
                app:layout_constraintStart_toEndOf="@+id/authorAvatar" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="@+id/authorAvatar"
                app:layout_constraintBottom_toBottomOf="@+id/authorAvatar"/>
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="24dp"
                android:layout_height="24dp" tools:srcCompat="@tools:sample/avatars"
                android:src="@mipmap/default_avatar"
                android:id="@+id/authorAvatar" app:layout_constraintStart_toStartOf="@+id/titleText"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/titleText"/>
        <TextView
                android:text="通缉等级：SS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/authorAvatar"
                app:layout_constraintStart_toStartOf="@+id/authorAvatar"
        />
        <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp" app:srcCompat="@mipmap/egg"
                android:id="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/textView3"
                app:layout_constraintBottom_toBottomOf="@+id/textView3"
                app:layout_constraintVertical_bias="0.615" app:layout_constraintEnd_toStartOf="@+id/reportCount"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
        <TextView
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reportCount"
                app:layout_constraintTop_toTopOf="@+id/imageView"
                app:layout_constraintBottom_toBottomOf="@+id/imageView" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:layout_marginRight="16dp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>

